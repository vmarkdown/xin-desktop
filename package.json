{
  "name": "xin-desktop",
  "version": "0.0.3",
  "description": "Free, open-source, full-featured Markdown editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "first-build": "ELECTRON_MIRROR=https://npm.taobao.org/mirrors/electron/ npm run app",
    "app": "electron-packager ../xin-desktop xin --platform=mas --app-version=0.0.4 --out=./app --overwrite --icon=./assets/icons/icon.icns",
    "win": "electron-packager ../xin-desktop xin --platform=win32 --app-version=0.0.4 --out=./app --overwrite",
    "dmg": "electron-installer-dmg ./app/xin-mas-x64/xin.app xin"
  },
  "repository": "https://github.com/vmarkdown/xin-desktop",
  "keywords": [
    "markdown",
    "editor",
    "Electron"
  ],
  "author": "yucopowo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^3.0.9"
  }
}
